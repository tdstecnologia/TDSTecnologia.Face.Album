@model TDSTecnologia.FaceAlbum.Web.Models.Album

@{
    ViewData["Title"] = "Detalhes do album " + Model.Descricao;
}

<div class="album">
    <div class="foto jumbotron">
        <div class="container">
            <div class="texto">
                <h2 class="white-text">@Html.DisplayFor(model => model.Titulo)</h2>
                <h5 class="white-text">@Html.DisplayFor(model => model.DataInicio)</h5>
            </div>
        </div>
    </div>

    <div>
        <hr />
        <h5 class="center">@Model.Descricao</h5>
        <hr />
    </div>

</div>


@section Scripts{
    <script>
    var linkImagem = $(".linkImagem").text();
    var url = "/" + linkImagem;
    $(document).ready(function () {
        $(".foto").css("background-image", 'url("@Url.Content(Model.Capa)")');
    });
    </script>
}